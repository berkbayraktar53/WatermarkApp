@model Product

@{
    ViewData["Title"] = "Ürün Detay";
}

<h2 class="text-center text-info">Ürün Detayı</h2>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.Label("Ürün Adı :")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.Label("Ürün Fiyatı :")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.Label("Ürün Stok Sayısı :")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
        <dt class = "col-sm-2">
            @Html.Label("Ürün Resmi :")
        </dt>
        <dd class = "col-sm-10">
            <img src="~/images/@Model.ImageName" height="70" width="70" />
        </dd>
    </dl>
</div>
<div class="text-center">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Güncelle</a>
    <btn class="btn btn-dark" onclick="history.back()">Geri Dön</btn>
</div>