@model Product
@{
    ViewData["Title"] = "Ürün Ekle";
}

<h2 class="text-center text-info">Ürün Ekle</h2>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Ürün Adı</label>
                <input asp-for="ProductName" class="form-control" autocomplete="off" placeholder="Ürün adını giriniz" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ürün Fiyatı</label>
                <input asp-for="Price" class="form-control" autocomplete="off" placeholder="Ürün fiyatını giriniz" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ürün Stok Sayısı</label>
                <input asp-for="Stock" class="form-control" autocomplete="off" placeholder="Ürün stok sayısını giriniz" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ürün Resmi</label>
                <input type="file" name="ImageFile" class="form-control-file" />
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Ekle" class="btn btn-info" />
                <btn class="btn btn-dark" onclick="history.back()">Geri Dön</btn>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}